<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="es.mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <!-- Existing API Test Button -->
            <Button Text="Test API Connection"
                    Clicked="OnTestApiClicked"
                    HorizontalOptions="Center" />

            <!-- New WebView Section -->
            <Frame Padding="10" BorderColor="LightGray" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Web Browser" FontSize="Medium" FontAttributes="Bold" />
                    <WebView x:Name="MyWebView" 
                             HeightRequest="500" 
                             VerticalOptions="FillAndExpand" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>