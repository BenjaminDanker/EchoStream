@using es.view.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main aria-labelledby="title">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <!-- Center the form -->
                <h2 id="title">@ViewBag.Title</h2>
                <h4>Use your username to log in.</h4>
                <hr />

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control w-75 mx-auto", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control w-75 mx-auto", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-check d-flex justify-content-center align-items-center mb-3">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input me-2" })
                        <label class="form-check-label">
                            Remember me
                        </label>
                    </div>

                    <div class="d-flex justify-content-center">
                        <input type="submit" value="Log in" class="btn btn-primary btn-lg w-75" />
                    </div>

                    <div class="text-center mt-3">
                        @Html.ActionLink("Register as a new user", "Register")
                    </div>
                }
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
